<?xml version="1.0" encoding="utf-8"?>
<!-- vim:fdn=3:
-->
<openerp>
    <data>
        <template id="gts_debranding_conf_1.layout" inherit_id="web.layout">
            <xpath expr="//meta[@http-equiv='content-type']" position="after">
                <link rel="shortcut icon" href="/gts_debranding_conf_1/static/src/img/favicon.ico" type="image/x-icon"/>
            </xpath>
            <xpath expr="//title" position="replace">
                <title>
                    <t t-if="title">
                        <t t-esc="title" />
                    </t>
                </title>
                <h1 id="title_myconf" style="display: none"><t t-esc="title_conf" /></h1>
            </xpath>
            <xpath expr="//link[@rel='shortcut icon']" position="replace">
                <link rel="shortcut icon" href="/gts_debranding_conf_1/static/src/img/favicon.ico" type="image/x-icon"/>
            </xpath>
        </template>
        
        <template id="gts_debranding_conf_1.qunit_suite" inherit_id="web.qunit_suite">
            <xpath expr="//title" position="replace">
                <title>[HanelSoft] Web Tests</title>
            </xpath>
            <xpath expr="//link[@rel='shortcut icon']" position="replace">
                <link rel="shortcut icon" href="/gts_debranding_conf_1/static/src/img/favicon.ico" type="image/x-icon"/>
            </xpath>
        </template>

        <template id="gts_debranding_conf_1.menu_secondary" inherit_id="web.menu_secondary">
            <xpath expr="//div[@class='oe_footer']" position="replace">
                <div class="oe_footer">
                    Powered by <a href="http://hanelsoft.vn" target="_blank">
                    <t t-if="power_by">
                        <t t-esc="power_by" />
                    </t>
                </a>
                </div>
            </xpath>
        </template>

        <template id="gts_debranding_conf_1.login_layout" inherit_id="web.login_layout">
            <xpath expr="//a[@href='https://www.odoo.com']" position="replace">
                <a href="http://hanelsoft.vn" target="_blank">Powered by
                    <t t-if="power_by">
                        <t t-esc="power_by" />
                    </t>
                </a>
            </xpath>
        </template>


        <template id="rpl_oe_f" inherit_id="web.menu_secondary">
            <xpath expr="//div[@class='oe_footer']" position="replace"></xpath>
        </template>
        <template id="shortcut_icon" inherit_id="web.layout">
            <xpath expr="//head/link[@rel='shortcut icon']" position="replace">
                <link rel="shortcut icon" href="/gts_debranding_conf_1/static/src/img/favicon.ico" type="image/x-icon"/>
            </xpath>
            <xpath expr="//head/title" position="replace">
                <title>
                    <t t-if="title">
                        <t t-esc="title" />
                    </t>
                </title>
            </xpath>
        </template>

        <template id="anlo" inherit_id="web.assets_backend">
            <xpath expr="//script[@src='/base/static/src/js/apps.js']" position="after">
                <script type="text/javascript" src="/gts_debranding_conf_1/static/src/js/branding.js"></script>
            </xpath>
        </template>
    </data>
</openerp>